{
 "apiVersion": "autoscaling/v2beta1",
 "kind": "HorizontalPodAutoscaler",
 "metadata": {
  "name": "REPOSITORY.IMAGE.DOCKER",
  "namespace": "default"
 },
 "spec": {
  "scaleTargetRef": {
   "apiVersion": "apps/v1",
   "kind": "Deployment",
   "name": "REPOSITORY.IMAGE.DOCKER"
  },
  "minReplicas": 1,
  "maxReplicas": 2,
  "metrics": [
   {
    "type": "Resource",
    "resource": {
     "name": "cpu",
     "targetAverageUtilization": 50
    }
   }
  ]
 }
}